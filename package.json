{
  "name": "plutonium-apps",
  "description": "coding tutorials",
  "version": "1.0.0",
  "author": "@panesarpbx8",
  "scripts": {
    "dev": "concurrently \"yarn dev:hugo\" \"yarn dev:styles\" \"yarn dev:elements\"",
    "build": "yarn build:elements && yarn build:styles && yarn build:hugo",
    "dev:elements": "ng serve",
    "build:elements": "ng build",
    "dev:hugo": "hugo server --forceSyncStatic --disableFastRender --port 3000",
    "build:hugo": "hugo --cleanDestinationDir",
    "dev:styles": "concurrently \"yarn dev:tailwind\" \"yarn dev:sass\"",
    "build:styles": "yarn build:sass && yarn build:tailwind",
    "dev:sass": "sass --no-source-map ./styles/main.scss ./static/main.css -w",
    "build:sass": "sass --no-source-map ./styles/main.scss ./static/main.css",
    "dev:tailwind": "npx tailwindcss -w -i ./static/main.css -o ./static/bundle.css",
    "build:tailwind": "npx tailwindcss -i ./static/main.css -o ./static/bundle.css",
    "git": "git add . && git commit -m refactor",
    "push": "git push origin master",
    "clean-deploy": "yarn build && yarn git && yarn push"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/elements": "^14.2.6",
    "@angular/fire": "^7.4.1",
    "@angular/forms": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "daisyui": "^2.31.0",
    "firebase": "^9.12.1",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.4",
    "@angular/cli": "~14.2.4",
    "@angular/compiler-cli": "^14.2.0",
    "@tailwindcss/typography": "^0.5.7",
    "autoprefixer": "^10.4.12",
    "concurrently": "^7.4.0",
    "postcss": "^8.4.18",
    "sass": "^1.55.0",
    "tailwindcss": "^3.1.8",
    "typescript": "~4.7.2"
  }
}
